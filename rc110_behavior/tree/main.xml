<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar>
            <Condition ID="CheckObstacle" switch="{result}"/>
            <Switch4 case_1="none" case_2="near" case_3="left" case_4="right" variable="{result}">
                <Action ID="DriveAction" speed="0.5" steering="0"/>
                <Action ID="DriveAction" speed="0" steering="0"/>
                <Action ID="DriveAction" speed="0.5" steering="30"/>
                <Action ID="DriveAction" speed="0.5" steering="-30"/>
                <AlwaysFailure/>
            </Switch4>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="BreakAction"/>
        <Condition ID="CheckObstacle">
            <output_port default="{result}" name="switch"/>
        </Condition>
        <Action ID="DriveAction">
            <input_port default="0" name="speed"/>
            <input_port default="0" name="steering"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

