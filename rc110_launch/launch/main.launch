<launch>
    <node pkg="cv_camera" type="cv_camera_node" name="front_camera" respawn="true">
        <param name="frame_id" value="front_camera" />
        <param name="device_id" value=0 />
        <param name="rate" value=30.0 />
        <param name="image_width" value=1920 />
        <param name="image_height" value=1080 />
    </node>
    <node pkg="cv_camera" type="cv_camera_node" name="rear_camera" respawn="true">
        <param name="frame_id" value="rear_camera" />
        <param name="device_id" value=2 />
        <param name="rate" value=30.0 />
        <param name="image_width" value=1920 />
        <param name="image_height" value=1080 />
    </node>

    <node pkg="hokuyo_node" type="hokuyo_node" name="lidar_2d" respawn="true">
    </node>

    <node pkg="rc110_drive_control" type="rc110_drive_control" name="drive_control" respawn="true">
    </node>

    <node pkg="rc110_behavior" type="rc110_behavior" name="behavior" respawn="true">
        <rosparam file="$(find rc110_launch)/config/behavior.yaml" subst_value="true"/>
    </node>
</launch>
